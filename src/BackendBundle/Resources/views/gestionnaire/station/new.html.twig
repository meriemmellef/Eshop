                                                <label>{{ "Nom"|trans }} <span style="color: #ED0000">*</span>:</label>
                                            </div>
                                            <div class="col-lg-5 text-left">
                                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                            </div>

                                        </div>
                                    </div>
